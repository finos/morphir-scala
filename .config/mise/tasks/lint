#!/usr/bin/env -S scala-cli shebang -S 3
//MISE description="Lint Scala code"
//> using dep com.lihaoyi::os-lib:0.11.4

object Main {
  def main(args: Array[String]): Unit = {
    println("Linting code...")
    println("  Linting Scala files...")
    // Call Mill directly instead of through Alias to avoid parallel task resolution issues
    os.proc("./mill", "mill.scalalib.scalafmt.ScalafmtModule/checkFormatAll", "__.sources").call(cwd = os.pwd)
    println("Lint completed successfully")
  }
}
